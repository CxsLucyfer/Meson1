_meson-help() {
  longopts=(
    setup
    configure
    dist
    install
    introspect
    init
    test
    wrap
    subprojects
    rewrite
    compile
    devenv
    env2mfile
  )

  local cur prev

  if _get_comp_words_by_ref cur prev &>/dev/null; then
    COMPREPLY+=($(compgen -W '${longopts[*]}' -- "${cur}"))
  fi
}

